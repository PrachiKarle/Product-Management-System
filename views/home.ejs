<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include('header.ejs')%>
  </head>

  <body>
    <h1 class="text-warning bg-dark text-center p-3">Add Products</h1>
    <hr />
    <a href="/products"><button class="btn btn-dark m-3">Show Products</button></a>
    <br>

    <form action="/products" method="post" class="px-4">
      <div class="form-group my-3">
        <label for="">Product Name</label>
        <input
          type="text"
          class="form-control"
          name="prod_name"
          id="prod_name"
          required
        />
      </div>

      <div class="form-group my-3">
        <label for="">Product Category</label>
        <select name="prod_category" class="form-control" required>
          <option value="none">_Select_</option>
          <option value="Mobile Phones">Mobile Phones</option>
          <option value="Laptops">Laptops</option>
          <option value="Televisions">Televisions</option>
          <option value="Cameras">Cameras</option>
          <option value="Accessories">Accessories</option>
        </select>
      </div>

      <div class="form-group my-3">
        <label for="">Product Price</label>
        <input
          type="text"
          required
          class="form-control"
          name="prod_price"
          id="prod_price"
        />
      </div>

      <div class="form-group my-3">
        <label for="">Stock</label>
        <input
          type="text"
          class="form-control"
          name="stock"
          id="stock"
          required
        />
      </div>

      <button class="btn btn-danger">Submit</button>
    </form>
  </body>

</html>
